@{
    Layout = "~/_TileLayout.cshtml";
    Page.Head = "Calendar";
}

@section content {
    <div id='calendar'></div>
    <a href="~/Event.aspx"><button>Add New Event</button></a>
    <script>
        $(function () {
            var date = new Date();
            var d = date.getDate();
            var m = date.getMonth();
            var y = date.getFullYear();
            var name = 'Shannons Birthday';
            var e = new Array();
            Event eventList = new Event();
            for (var i = 0; i < 5; i++) {
                e.push({ title: name, start: new Date(y, m, i) });
            }
            

            $('#calendar').fullCalendar({
                header: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'month,basicWeek,basicDay'
                },
                editable: true,
                events: e
            });
        });

    </script>

}