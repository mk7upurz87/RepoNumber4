@{
    Layout = "~/_TileLayout.cshtml";
    Page.Head = "Calendar";
    Calendar cal = new Calendar();
    cal.database();
        
}

@section content {
<html>
    <head>
        <title>Web Engineering - @Page.Head</title>

        <link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" type="text/css" />
   		<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet"/>
        <link href="~/Content/fullcalendar.css" rel="stylesheet" />
        <link href="~/Content/fullcalendar.print.css" media="print" rel="stylesheet" />
        <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" />
 
        <script src="Scripts/jquery-1.9.1.min.js"></script>
        <script src="Scripts/jquery-ui-1.10.2.custom.min.js" type="text/javascript"></script>
        <script src="Scripts/jquery-ui-1.10.2.js"></script>
  		<script src="Scripts/bootstrap.min.js" type="text/javascript"></script>

        <script src="Scripts/fullcalendar.js" type="text/javascript"></script>
    </head>
    <body>
        <div id="body">
            <div id='calendar'></div>

            <a class="btn" href="~/Event.aspx" role="button">Add New Event</a>
            <a class="btn" href="~/Default.cshtml">Return to Portal</a>
        </div>
        

        <script>
            $(function () {
                var e = new Array();
                var i = 0;

                while( i < 3 ) {
                    var date = "@cal.getDate()";
                    var d = parseInt(date.slice(0, 1));
                    var m = parseInt(date.slice(3, 4));
                    var y = parseInt(date.slice(6, 9));
                    e.push({ title: "@cal.getName()", start: new Date(y, m, d) });
                    i = i + 1;
                }


                $('#calendar').fullCalendar({
                    header: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'month,basicWeek,basicDay'
                    },
                    editable: true,
                    events: e
                });
            });
        </script>
    </body>
</html>
}