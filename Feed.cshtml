﻿@{
    Layout = "~/_TileLayout.cshtml";
    Page.Head = "Feed";
}

@section imports {
    <link href="~/Content/jquery.neosmart.fb.wall.css" rel="stylesheet" />
    <script src="Scripts/jquery.neosmart.fb.wall.js"></script>
    <script src="Scripts/facebook.js"></script>
}

@section content {
    <script>
        function clear() {
            var elem = document.getElementById('fb-status');
            elem.value = "";
        }
    </script>

    <div id="fb-root"></div>
  
    <div id="feed-content">
        <form>
            <input type="text" id="fb-status" placeholder="What's on your mind?" name="status"/>
            <input type="button" class="btn btn-primary"  id="postbut" value="Post" onclick="window.location.reload();"/>
        </form>
        
        <div id="wall"></div>
        <div id="social"></div>
    </div>
}
   