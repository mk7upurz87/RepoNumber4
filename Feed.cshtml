﻿@{
    Layout = "~/_TileLayout.cshtml";
    Page.Head = "Feed";
}
@section imports {
    <link href="~/Content/jquery.neosmart.fb.wall.css" rel="stylesheet" />
    <script src="Scripts/jquery.neosmart.fb.wall.js"></script>
}

@section content {
    
    <script>
        function clear() {
            var elem = document.getElementById('status');
            elem.value = "";
        } 
    </script>

    <div id="fb-root"></div>
   

    <div id="content" style="float:left;"><form>
    <input type="text" style="width:74%;" id="status" placeholder="What's on your mind?" name="status"/>
    <input type="button" class="btn btn-primary"  id="postbut" value="Post" onclick="window.location.reload();"/>

                                          </form>
    <div id="social" style="max-width:80%;float:left;"></div></div>
}
